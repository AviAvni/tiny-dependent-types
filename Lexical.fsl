{
module Lexical

open Microsoft.FSharp.Text.Lexing
open Grammar

let lexemeAsString lexbuf =
    LexBuffer<char>.LexemeString lexbuf

let keyword s =
    match s with
    | "Set"    -> SET
    | "forall" -> PI
    | _        -> ID s
}

let letter      = ['a'-'z' 'A'-'Z']
let digit       = ['0'-'9']
let space       = [' ' '\t']
let newline     = "\n\r" | '\n' | '\r'
let lambda      = '\\' | 'λ'

rule token = parse
  | space|newline         { token lexbuf }
  | letter(letter|digit)* { keyword (lexemeAsString lexbuf) }
  | lambda                { LAMBDA }
  | 'Π'                   { PI     }
  | '.'                   { DOT }
  | eof                   { EOF }
  | ':'                   { COLON }
  | ":q"                  { CMD_QUIT }
  | ":quit"               { CMD_QUIT }
  | ":p"                  { CMD_POSTULATE }
  | ":postulate"          { CMD_POSTULATE }
  | ":s"                  { CMD_SHOWSTATE }
  | ":show"               { CMD_SHOWSTATE }
  | ":showstate"          { CMD_SHOWSTATE }
  | '('                   { LPAR }
  | ')'                   { RPAR }
  | '_'                   { UNDERSCORE }

